<odoo>
    <record id="view_mes_import_events_wizard_form" model="ir.ui.view">
        <field name="name">mes.events.import.wizard.form</field>
        <field name="model">mes.events.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Events">
                <group>
                    <field name="file" filename="filename"/>
                    <field name="filename" invisible="1"/>
                </group>
                <div class="alert alert-info" role="alert">
                    <p><strong>CSV Format (delimiter ';'):</strong></p>
                    <p>AlarmCode;Description;DefaultOPCTag;DefaultPLCValue;ParentName</p>
                </div>
                <footer>
                    <button name="do_import" string="Import" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_mes_import_events" model="ir.actions.act_window">
        <field name="name">Import Events</field>
        <field name="res_model">mes.events.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_mes_import_events"
              name="Import Events CSV"
              parent="menu_mes_configuration" 
              action="action_mes_import_events"
              sequence="100"/>
</odoo>