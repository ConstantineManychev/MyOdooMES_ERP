<odoo>
    <record id="view_mes_planned_downtime_tree" model="ir.ui.view">
        <field name="name">mes.planned.downtime.tree</field>
        <field name="model">mes.planned.downtime</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-muted="state == 'applied'">
                <field name="name"/>
                <field name="downtime_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="machine_ids" widget="many2many_tags"/>
                <field name="state" widget="badge" decoration-success="state == 'applied'"/>
            </tree>
        </field>
    </record>

    <record id="view_mes_planned_downtime_form" model="ir.ui.view">
        <field name="name">mes.planned.downtime.form</field>
        <field name="model">mes.planned.downtime</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_apply" string="Apply to Calendar" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_reset" string="Reset to Draft" type="object" invisible="state != 'applied'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="e.g. Weekly Maintenance"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="downtime_type"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="machine_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_mes_planned_downtime" model="ir.actions.act_window">
        <field name="name">Planned Downtime</field>
        <field name="res_model">mes.planned.downtime</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_mes_planned_downtime"
              name="Planned Downtime"
              parent="menu_mes_documents"
              action="action_mes_planned_downtime"
              sequence="40"/>
</odoo>