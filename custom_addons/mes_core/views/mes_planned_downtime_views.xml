<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mes_planned_downtime_form" model="ir.ui.view">
        <field name="name">mes.planned.downtime.form</field>
        <field name="model">mes.planned.downtime</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="generate_flat_schedule_for_week" string="Сгенерировать сейчас" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="rule_type"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="machine_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    
                    <group invisible="rule_type != 'daily'">
                        <field name="daily_start" widget="float_time"/>
                        <field name="daily_end" widget="float_time"/>
                    </group>
                    
                    <group invisible="rule_type != 'weekend'">
                        <field name="weekend_start_day"/>
                        <field name="weekend_start_time" widget="float_time"/>
                        <field name="weekend_end_day"/>
                        <field name="weekend_end_time" widget="float_time"/>
                    </group>
                    
                    <group invisible="rule_type != 'one_time'">
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mes_planned_downtime_tree" model="ir.ui.view">
        <field name="name">mes.planned.downtime.tree</field>
        <field name="model">mes.planned.downtime</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="rule_type"/>
                <field name="machine_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="action_mes_planned_downtime" model="ir.actions.act_window">
        <field name="name">Planned Downtime</field>
        <field name="res_model">mes.planned.downtime</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_mes_planned_downtime_tree"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new planned downtime rule
          </p>
        </field>
    </record>

    <record id="view_mes_flat_downtime_tree" model="ir.ui.view">
        <field name="name">mes.flat.downtime.tree</field>
        <field name="model">mes.flat.downtime</field>
        <field name="arch" type="xml">
            <tree default_order="start_time desc" create="false" edit="false">
                <field name="machine_id"/>
                <field name="rule_id"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="duration" widget="float_time"/>
            </tree>
        </field>
    </record>

</odoo>