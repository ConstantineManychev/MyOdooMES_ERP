<odoo>
    <record id="view_mes_machine_settings_form" model="ir.ui.view">
        <field name="name">mes.machine.settings.form</field>
        <field name="model">mes.machine.settings</field>
        <field name="arch" type="xml">
            <form string="Machine Settings">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Enter Machine Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="ip_connection"/>
                        </group>
                        <group>
                            <field name="ip_data"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Config Signals" name="signals">
                            <notebook>
                                <page string="Counts">
                                    <field name="count_tag_ids">
                                        <tree editable="bottom">
                                            <field name="count_id"/>
                                            <field name="tag_name"/>
                                            <field name="poll_type"/>
                                            <field name="poll_frequency"/>
                                            <field name="param_type"/>
                                            <field name="is_cumulative" widget="boolean_toggle"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Events">
                                    <field name="event_tag_ids">
                                        <tree editable="bottom">
                                            <field name="event_id"/>
                                            <field name="tag_name"/>
                                            <field name="plc_value"/>
                                            <field name="poll_type"/>
                                            <field name="poll_frequency"/>
                                            <field name="param_type"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Processes">
                                    <field name="process_tag_ids">
                                        <tree editable="bottom">
                                            <field name="process_id"/>
                                            <field name="tag_name"/>
                                            <field name="poll_type"/>
                                            <field name="poll_frequency"/>
                                            <field name="param_type"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_mes_machine_settings_tree" model="ir.ui.view">
        <field name="name">mes.machine.settings.tree</field>
        <field name="model">mes.machine.settings</field>
        <field name="arch" type="xml">
            <tree string="Machine Settings">
                <field name="name"/>
                <field name="ip_connection"/>
                <field name="ip_data"/>
            </tree>
        </field>
    </record>

    <record id="action_mes_machine_settings" model="ir.actions.act_window">
        <field name="name">Machine Settings</field>
        <field name="res_model">mes.machine.settings</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>