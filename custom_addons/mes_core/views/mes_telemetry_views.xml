<odoo>
    <record id="action_init_timescale_server" model="ir.actions.server">
        <field name="name">Initialize Timescale Tables</field>
        <field name="model_id" ref="model_mes_timescale_db_manager"/>
        <field name="state">code</field>
        <field name="code">
            model._init_DB()
        </field>
        </record>

    <record id="view_mes_machine_settings_form" model="ir.ui.view">
         </record>
    
    <record id="view_mes_machine_settings_tree" model="ir.ui.view">
         </record>

    <record id="action_mes_machine_settings" model="ir.actions.act_window">
        <field name="name">Machine Connections</field>
        <field name="res_model">mes.machine.settings</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_mes_telemetry_config"
              name="Telemetry Config"
              parent="menu_mes_configuration"
              sequence="50"/>

    <menuitem id="menu_mes_machine_settings_item"
              name="Machine Connections"
              parent="menu_mes_telemetry_config"
              action="action_mes_machine_settings"
              sequence="10"/>

    <menuitem id="menu_mes_init_db"
              name="Initialize Database"
              parent="menu_mes_telemetry_config"
              action="action_init_timescale_server"
              sequence="20"
              groups="base.group_no_one"/> </odoo>