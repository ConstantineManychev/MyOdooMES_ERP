<odoo>
    <record id="view_mes_task_kanban" model="ir.ui.view">
        <field name="name">mes.task.kanban</field>
        <field name="model">mes.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="user_id"/>
                <field name="machine_id"/>
                <field name="state"/>
                <field name="activity_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click oe_kanban_card">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <span t-if="record.machine_id.raw_value" class="badge text-bg-info">
                                    <field name="machine_id"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_mes_task_form" model="ir.ui.view">
        <field name="name">mes.task.form</field>
        <field name="model">mes.task</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_done" string="Mark as Done" type="object" class="oe_highlight" 
                            invisible="state in ('done','cancel')"/>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="machine_id"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="author_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_mes_task_search" model="ir.ui.view">
        <field name="name">mes.task.search</field>
        <field name="model">mes.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="user_id"/>
                <field name="machine_id"/>
                <filter string="My Tasks" name="my_tasks" domain="[('user_id', '=', uid)]"/>
                <filter string="Not Done" name="not_done" domain="[('state', '!=', 'done')]"/>
                <group expand="0" string="Group By">
                    <filter string="Assigned to" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_mes_task" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">mes.task</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_not_done': 1}</field>
    </record>
</odoo>