<odoo>
    <record id="view_mes_task_search" model="ir.ui.view">
        <field name="name">mes.task.search</field>
        <field name="model">mes.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="maintainx_id"/>
                <field name="machine_id"/>
                <field name="assigned_id"/>

                <filter string="Open" name="state_new" domain="[('state', '=', 'new')]"/>
                <filter string="In Progress" name="state_assigned" domain="[('state', '=', 'assigned')]"/>
                <filter string="On Hold" name="state_on_hold" domain="[('state', '=', 'on_hold')]"/>
                <filter string="Done" name="state_done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="High Priority" name="priority_high" domain="[('priority', '=', '2')]"/>

                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                    <filter string="Machine" name="group_machine" context="{'group_by': 'machine_id'}"/>
                </group>

                <searchpanel>
                    <field name="state" string="Status" icon="fa-tasks" select="one" enable_counters="1"/>
                    
                    <field name="priority" string="Priority" icon="fa-sort-amount-desc" select="multi" enable_counters="1"/>
                    
                    <field name="machine_id" string="Machine" icon="fa-cogs" select="multi" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="view_mes_task_tree" model="ir.ui.view">
        <field name="name">mes.task.tree</field>
        <field name="model">mes.task</field>
        <field name="arch" type="xml">
            <tree decoration-danger="priority == '2'" 
                  decoration-warning="priority == '1'" 
                  decoration-success="priority == '0'"
                  decoration-muted="state == 'done'"
                  default_order="priority desc, id desc"> 
                  
                <field name="priority" widget="badge" 
                       decoration-danger="priority == '2'" 
                       decoration-warning="priority == '1'" 
                       decoration-success="priority == '0'"/>
                <field name="machine_id"/>
                <field name="name"/>
                <field name="maintainx_created_at"/>
                <field name="assigned_id"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'new'" 
                       decoration-warning="state == 'on_hold'"
                       decoration-primary="state == 'assigned'" 
                       decoration-success="state == 'done'"/>          
            </tree>
        </field>
    </record>

    <record id="view_mes_task_kanban" model="ir.ui.view">
        <field name="name">mes.task.kanban</field>
        <field name="model">mes.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" 
                    class="o_kanban_small_column"
                    default_order="priority desc, maintainx_created_at desc">
                <field name="name"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="machine_id"/>
                <field name="assigned_id"/>
                <field name="create_date"/> <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click oe_kanban_card">
                            
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                            </div>

                            <div class="o_kanban_record_body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <field name="priority" widget="label_selection" 
                                           options="{'classes': {'0': 'success', '1': 'warning', '2': 'danger'}}"/>
                                    
                                    <span t-if="record.machine_id.raw_value" class="badge text-bg-info">
                                        <field name="machine_id"/>
                                    </span>
                                </div>
                            </div>

                            <div class="o_kanban_record_bottom mt-2">
                                <div class="oe_kanban_bottom_left text-muted">
                                    <i class="fa fa-calendar me-1" title="Created Date"/>
                                    <field name="maintainx_created_at" widget="date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="assigned_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_mes_task_form" model="ir.ui.view">
        <field name="name">mes.task.form</field>
        <field name="model">mes.task</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,assigned,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group string="Main Info">
                            <field name="machine_id"/>
                            <field name="priority" widget="radio" options="{'horizontal': true}"/>
                            <field name="assigned_id"/> 
                        </group>
                        <group string="MaintainX Sync">
                            <field name="maintainx_id"/>
                            <field name="maintainx_created_at"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Status History">
                            <field name="status_history_ids">
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="change_date"/>
                                    <field name="status"/>
                                    <field name="source"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Assignees History">
                            <field name="maintainx_assignees_history"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_mes_task" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">mes.task</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_mes_task_search"/>
        <field name="context">{}</field>
    </record>
</odoo>