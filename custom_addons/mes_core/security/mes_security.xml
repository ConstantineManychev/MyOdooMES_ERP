<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="module_category_mes">
            <field name="name">MES System</field>
            <field name="description">Access levels for the MES system</field>
            <field name="sequence">100</field>
        </record>

        <record id="group_mes_operator" model="res.groups">
            <field name="name">Operator (Own Machines Only)</field>
            <field name="category_id" ref="module_category_mes"/>
        </record>

        <record id="group_mes_manager" model="res.groups">
            <field name="name">Manager (Read All)</field>
            <field name="category_id" ref="module_category_mes"/>
            <field name="implied_ids" eval="[(6, 0, [ref('mes_core.group_mes_operator'), ref('mrp.group_mrp_user')])]"/>
        </record>

        <record id="group_mes_administrator" model="res.groups">
            <field name="name">Administrator (Full Access)</field>
            <field name="category_id" ref="module_category_mes"/>
            <field name="implied_ids" eval="[(6, 0, [ref('mes_core.group_mes_manager'), ref('mrp.group_mrp_manager')])]"/>
        </record>
    </data>

    <data noupdate="0">
        <record id="rule_mes_operator_workcenter" model="ir.rule">
            <field name="name">MES Operator: Own Workcenters</field>
            <field name="model_id" ref="mrp.model_mrp_workcenter"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('mes_core.group_mes_operator'))]"/>
        </record>

        <record id="rule_mes_manager_workcenter" model="ir.rule">
            <field name="name">MES Manager: All Workcenters</field>
            <field name="model_id" ref="mrp.model_mrp_workcenter"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('mes_core.group_mes_manager'))]"/>
        </record>
    </data>
</odoo>