<odoo>
    <record id="module_category_mes" model="ir.module.category">
        <field name="name">MES System</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_mes_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_mes"/>
    </record>

    <record id="group_mes_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_mes"/>
        <field name="implied_ids" eval="[(4, ref('group_mes_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>